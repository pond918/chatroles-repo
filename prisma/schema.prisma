  /// @DtoReadOnly
  /// @DtoEntityHidden
  userId    String    @map("user_id") @db.VarChar(31)
  /// @DtoCreateApiResponse
  /// @DtoUpdateApiResponse
  runtime   String    @db.VarChar(8)
